<div class="container">
<div class="row ">
<div class="col-md-4 col-md-offset-4 min-h">
<div class="admin-white">
<%=link_to root_path do%>
<%=image_tag '1Artboard 1.png', class:'admin-logo'%>
<%end%>
<p class="text-center after-logo">Вход в админпанель</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-group"}) do |f| %>
  <div class="field-inpt">
    
    <%= f.email_field :email, autofocus: true, class:"form-control", placeholder:'Email adress' %>
  </div>

  <div class="field-inpt">
    
    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:'Password' %>
  </div>

  

  <div class="actions">
    <%= f.submit "Войти", class:'admin-submit' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label(:remember_me, "Запомнить меня") %>
       <%= render "devise/shared/links" %>
    </div>
  <% end -%>

<% end %>


</div>
</div>
</div>
</div>